{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "bot/src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "noEmitOnError": true,
    "allowImportingTsExtensions": false
  },
  "include": ["bot/src/**/*"],
  "exclude": ["node_modules", "dist", "bot/test"]
}
